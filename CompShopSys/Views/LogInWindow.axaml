<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:viewmodels="using:TechShopMS.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        x:Class="TechShopMS.Views.LogInWindow"
		Width="800"
		Height="500"
		x:DataType="viewmodels:LogInWindowViewModel"
        Title="LogInWindow"
		  ExtendClientAreaToDecorationsHint="True"
		>
	<Grid>
		
		<Image Source="avares://TechShopMS/Assets/Images/bgTech.jpg"
               Stretch="UniformToFill" />

		<Border Background="#80000000" />

	
	<Border Width="350"
			Background="{DynamicResource PrimWhite}"
			CornerRadius="10"
			Padding="20"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Effect="{DynamicResource ShadowEffect}">

		<StackPanel Spacing="15">
			<TextBlock Text="Sign In"
					   FontSize="24"
					   FontWeight="Bold"
					   Foreground="Black"
					   HorizontalAlignment="Center" />

			
			<StackPanel>
				<TextBlock Text="Username" FontSize="12" Margin="0,0,0,5"/>
				<TextBox Name="UsernameBox"
						
						 Text="{Binding UserName}"
						 Watermark="Enter your username" />
			</StackPanel>

			
			<StackPanel>
				<TextBlock Text="Password" FontSize="12" Margin="0,0,0,5"/>
				<TextBox Name="PasswordBox"
						 Text="{Binding Password}"
						 PasswordChar="â€¢"
						 RevealPassword="True"
						 Watermark="Enter your password" />
			</StackPanel>

		
			<DockPanel Margin="0,10,0,0">
				
				<Button Content="Login"
						Command="{Binding OnLogInButtonClick}"
						Width="100"
						HorizontalAlignment="Right"
						Background="#0083FF"
						Foreground="White"
						DockPanel.Dock="Right" />
			</DockPanel>
		</StackPanel>
	</Border>
	</Grid>
  <Window.Resources>
	  <ImageBrush x:Key="WindowBackgroundBrush"
			   Source="avares://TechShopMS/Assets/Images/bgTech.jpg"
			   Stretch="UniformToFill" />
  </Window.Resources>
</Window>
